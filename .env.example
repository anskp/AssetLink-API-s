# Environment Configuration for AssetLink Custody
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database (MySQL)
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/assetlink_custody"

# Security
API_KEY_SECRET=your-api-key-secret-change-in-production
HMAC_SECRET=your-hmac-secret-change-in-production

# Fireblocks (Optional for Sprint 0)
FIREBLOCKS_API_KEY=
FIREBLOCKS_PRIVATE_KEY_PATH=
FIREBLOCKS_BASE_URL=https://api.fireblocks.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
